<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 设置边框 -->
    <stroke
        android:width="2px"
        android:color="#C0F0D0" />
    
    <!-- 设置背景色 -->
    <solid
        android:color="#E0A0F0" />
    
    <!-- 设置圆角 -->
    <corners
        android:radius="10dp" />
    
    <!-- 设置边距 -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />

</shape>
